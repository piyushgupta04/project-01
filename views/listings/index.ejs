<% layout("./layouts/default.ejs") %>
<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for( let i of allData) { %>
        <a class="anchor" href="/listings/<%= i._id %>">
            <div class="card col">
                <img src="<%= i.image %>" class="card-img-top" alt="Image link" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            <%= i.title %>
                        </b><br>
                        <span>&#8377;<%= i.price.toLocaleString("en-IN"); %>/ Night</span>
                    </p>
                </div>
            </div>
        </a>
        <% } %>
    </div>
</body>