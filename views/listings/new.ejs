<%- layout('layouts/default.ejs') %>
<body>
    <div class="row">
        <div class="col col-lg-7">
            <h1>Create a listing!</h1>
            <form method="post" action="/listings?_method=POST">
                <div class="mb-2">
                    <label for="title">Title</label>
                    <input type="text" name="obj[title]" id="" class="form-control">
                </div>
                <div class="mb-2">
                    <label for="desc">Description</label>
                    <textarea name="obj[desc]" class="form-control"></textarea>
                </div>
                <div class="mb-2">
                    <label for="price">Price</label>
                    <input type="text" name="obj[price]" id="" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-2 col-md-8">
                        <label for="location">Location</label>
                        <input type="text" name="obj[location]" id="" class="form-control">
                    </div>
                    <div class="mb-2 col-md-4">
                        <label for="country">Country</label>
                        <input type="text" name="obj[country]" id="" class="form-control">
                    </div>
                </div>
                    <div class="mb-3">
                    <label for="img">Upload your image URL</label>
                    <input type="text" name="obj[image]" id=""  class="form-control">
                </div>
                <button class="btn btn-dark">Save</button>
                <br><br>
            </form>
        </div>
    </div>
    </body>